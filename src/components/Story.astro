---
import { Image } from "astro:assets";
import { getEventData } from "../data/eventData";

const { story } = getEventData();
const highlights = story.highlights ?? [];
const imageAlt = story.imageAlt ?? "Neon Circuit";

const storyImageModules = import.meta.glob("../assets/**/*", {
    eager: true,
    import: "default",
}) as Record<string, ImageMetadata>;

const resolveStoryImage = (filename?: string) => {
    if (!filename) return null;
    const normalized = filename.replace(/^\.?\//, "").replace(/^assets\//, "");
    const match = Object.entries(storyImageModules).find(([path]) => {
        const withoutPrefix = path.replace("../assets/", "");
        return (
            withoutPrefix === normalized ||
            withoutPrefix.endsWith(`/${normalized}`) ||
            path.endsWith(`/${normalized}`)
        );
    });
    return match?.[1] ?? null;
};

const storyImage = resolveStoryImage(story.imageAsset);
---

<section
    class="py-24 px-6"
    style="background-color: var(--color-background); color: var(--color-secondary);"
>
    <div
        class="mx-auto flex max-w-6xl flex-col gap-12 md:flex-row md:items-center"
    >
        <div class="md:w-7/12 space-y-6">
            <p
                class="text-sm uppercase tracking-[0.35em] font-(--font-sans)"
                style="color: var(--color-heading-light); opacity: 0.7;"
            >
                {story.chapterLabel}
            </p>
            <h2
                class="text-4xl sm:text-5xl tracking-tight font-(--font-display)"
                style="color: var(--color-secondary);"
            >
                {story.heading}
            </h2>
            <p
                class="text-lg leading-relaxed whitespace-pre-line font-(--font-sans)"
                style="color: var(--color-secondary); opacity: 0.8;"
            >
                {story.body}
            </p>
            <div
                class="mt-6 flex flex-wrap gap-3 text-sm font-(--font-sans)"
                style="color: var(--color-secondary); opacity: 0.7;"
            >
                {
                    highlights.map((highlight) => (
                        <span
                            class="inline-flex items-center gap-2 rounded-full border px-6 py-3"
                            style="border-color: var(--color-text-dark);"
                        >
                            {highlight}
                        </span>
                    ))
                }
            </div>
        </div>
        {storyImage && (
            <div class="md:w-5/12">
                <div class="relative">
                    <div class="relative rounded-4xl border p-4 backdrop-blur">
                        <Image
                            src={storyImage}
                            alt={imageAlt}
                            class="h-full w-full rounded-3xl object-cover"
                            loading="lazy"
                            format="webp"
                        />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>