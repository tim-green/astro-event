---
// Props interface
export interface Props {
    image?: string;
    imageAlt?: string;
    title: string;
    subtitle?: string;
    description?: string;
    children?: any;
}

const {
    image,
    imageAlt = "",
    title,
    subtitle,
    description,
    children,
} = Astro.props;
---

<!-- // Card component -->
<div
    class="card group relative isolate flex max-w-sm flex-col items-center overflow-hidden rounded-[28px] p-8 text-center transition-all duration-300 ease-out"
>
    <span class="card__glow"></span>

    {
        image && (
            <img
                src={image}
                alt={imageAlt}
                class="card__avatar mb-5 h-28 w-28 rounded-full object-cover"
                loading="lazy"
            />
        )
    }
    <h3 class="card__title text-xl font-semibold">{title}</h3>
    {
        subtitle && (
            <h4 class="card__subtitle mt-1 text-sm font-medium uppercase tracking-[0.2em]">
                {subtitle}
            </h4>
        )
    }
    {
        description && (
            <p class="card__body mt-3 text-base leading-snug">{description}</p>
        )
    }
    {children && <div class="card__footer mt-4 text-base">{children}</div>}
</div>
